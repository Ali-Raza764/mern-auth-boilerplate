{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm install && npm install --prefix client && npm run build --prefix client"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "backend/src/index.mjs"
    }
  ]
}
